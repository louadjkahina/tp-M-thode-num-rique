        "nom = \"Curie\"\n",
        "\n",
        "# Concat√©nation\n",
        "nom_complet = prenom + \" \" + nom\n",
        "print(\"Nom complet:\", nom_complet)\n",
        "\n",
        "# R√©p√©tition\n",
        "print(\"R√©p√©tition:\", \"Python \" * 3)\n",
        "\n",
        "# Longueur\n",
        "print(\"Longueur du nom:\", len(nom_complet))"
